<!-- > directory -->
{{#> 'layouts/main'}}
  {{#*inline 'content' this}}
  <div class="row">
    <div class="col s12">
      <h3>
        Content of {{this.dirname}}
        {{#if this.parent}}
        <a href="{{this.parent}}" class="btn-floating right">
          <i class="material-icons">keyboard_arrow_left</i>
        </a>
        {{/if}}
      </h3>
      <h5>Directories</h5>
      <div class="collection">
        {{#each this.directories}}
        <a href="/resources/{{this.path}}" class="collection-item">{{this.name}}</a>
        {{/each}}
      </div>
      <h5>Files</h5>
      <div class="collection">
        {{#each this.files}}
        <a href="/resources/{{this.path}}" class="collection-item">{{this.name}}<span class="right">{{filesize this.lstat.size}}</span></a>
        {{/each}}
      </div>
      <h5>Symlinks</h5>
      <div class="collection">
        {{#each this.symlinks}}
        <a href="/resources/{{this.path}}" class="collection-item">{{this.name}}<span class="right">{{filesize this.lstat.size}}</span></a>
        {{/each}}
      </div>
    </div>
  </div>
  {{/inline}}
{{/layouts/main}}
