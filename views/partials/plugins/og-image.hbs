<meta property="og:image" content="{{url}}" />
{{#if secure_url}}<meta property="og:image:secure_url" content="{{secure_url}}" />{{/if}}
{{#if type}}<meta property="og:image:type" content="{{type}}" />{{/if}}
{{#if width}}<meta property="og:image:width" content="{{width}}" />{{/if}}
{{#if height}}<meta property="og:image:height" content="{{height}}" />{{/if}}
{{#if alt}}<meta property="og:image:alt" content="{{alt}}" />{{/if}}