<!-- > structures/forms/account/avatar -->
<form action="/api/user/id/{{user._id}}/avatar" method="POST" enctype="multipart/form-data">
  {{#*inline 'avatar-form-fields' this}}
  <div class="row">
    <div class="col s12 center">
      <h3>Avatar</h3>
    </div>
  </div>
  <div class="row">
    <div class="col s12">
      <div class="input-field">
        <div class="drag-and-drop">
          <div class="box">
            <input type="file" name="avatar" style="display: none">
            <div class="center">
              <span>Drag file(s) here and drop them to start the upload.</span>
            </div>
            <div class="gallery"></div>
            <div class="target">
              <i class="material-icons">add_a_photo</i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{/inline}}
  {{#*inline 'avatar-form-submit'}}
  <button type="submit" class="btn">
    <i class="material-icons left">send</i>
    save
  </button>
  {{/inline}}
  {{#if useInModal}}
  <div class="modal-content">
    <div class="row">
      <div class="col s12">
        {{> 'avatar-form-fields'}}
      </div>
    </div>
  </div>
  <div class="modal-footer">
    {{> 'avatar-form-submit'}}
    <button type="button" class="btn-flat modal-close">cancel</button>
  </div>
  {{else}}
  {{> 'avatar-form-fields'}}
  <div class="row">
    <div class="col s12">
      {{> 'avatar-form-submit'}}
    </div>
  </div>
  {{/if}}
</form>
