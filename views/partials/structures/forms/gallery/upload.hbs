<!-- > structures/forms/gallery/upload -->
{{#if user}}
<form action="/gallery/image" method="POST" enctype="multipart/form-data">
  {{#*inline 'avatar-form-fields' this}}
  <div class="row">
    <div class="col s12">
      <div class="input-field">
        <div class="drag-and-drop">
          <div class="box">
            <div class="center">
              <span>Drag file(s) here and drop them to start the upload.</span>
            </div>
            <div class="gallery"></div>
            <div class="target">
              <i class="material-icons">add_a_photo</i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{/inline}}
  {{#*inline 'avatar-form-submit'}}
  {{!-- <button type="submit" class="btn">
    <i class="material-icons left">send</i>
    save
  </button> --}}
  {{/inline}}
  {{#if useInModal}}
  <div class="modal-content">
    <div class="row">
      <div class="col s12">
        {{> 'avatar-form-fields'}}
      </div>
    </div>
  </div>
  <div class="modal-footer">
    {{> 'avatar-form-submit'}}
    <button type="button" class="btn-flat modal-close">cancel</button>
  </div>
  {{else}}
  {{> 'avatar-form-fields'}}
  <div class="row">
    <div class="col s12">
      {{> 'avatar-form-submit'}}
    </div>
  </div>
  {{/if}}
</form>
{{else}}
<p>you need to log in in order to upload pictures</p>
{{/if}}
