<!-- > structures/forms/login -->
<form action="/account/login" method="POST" >
  {{#*inline 'login-form-fields' this}}
    <div class="row">
      <div class="col s12 center">
        <h3>Login</h3>
      </div>
    </div>
    <div class="row">
      <div class="col s12">
        <div class="input-field">
          <input type="text" name="login" required="true" class="{{#if this.error.login}}invalid{{/if}}">
          <label for="login">Username or E-Mail</label>
          <span class="helper-text" data-error="{{#if this.error.login}}{{this.error.login}}{{/if}}"></span>
        </div>
      </div>
      <div class="col s12">
        <div class="input-field">
          <input type="password" name="password" required="true" class="{{#if this.error.password}}invalid{{/if}}">
          <label for="password">Password</label>
          <span class="helper-text" data-error="{{#if this.error.login}}{{this.error.password}}{{/if}}"></span>
          <span class="right"><a href="/account/forgotPassword">Forgot Password?</a></span>
        </div>
      </div>
    </div>
  {{/inline}}
  {{#*inline 'login-form-submit'}}
    <button type="submit" class="btn">
      <i class="material-icons left">send</i>
      login
    </button>
  {{/inline}}
  {{#if useInModal}}
    <div class="modal-content">
      <div class="container">
        <div class="row">
          <div class="col s12 m6 offset-m3">
            {{> 'login-form-fields'}}
          </div>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      {{> 'login-form-submit'}}
      <button type="button" class="btn-flat modal-close">cancel</button>
    </div>
  {{else}}
    {{> 'login-form-fields'}}
    <div class="row">
      <div class="col s12">
      {{> 'login-form-submit'}}
      </div>
    </div>
  {{/if}}
</form>
